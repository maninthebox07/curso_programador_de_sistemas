-- DELETE FROM alunos WHERE genero = "Masculino";

-- UPDATE alunos
-- SET curso = "Analista de Sistemas";

SELECT alunos.nome, idade, genero, cursos.nome AS curso, periodo 
FROM alunos JOIN cursos 
ON alunos.curso_id = cursos.id
JOIN generos
ON alunos.genero_id = generos.id
JOIN periodos
ON periodos.id = cursos.periodo_id;